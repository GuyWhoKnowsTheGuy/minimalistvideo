@page "/"

@if (!string.IsNullOrWhiteSpace(YouTube))
{
    <MudStack Style="width:100%; height:100%; position:relative;">
        <MudSpacer />
        <MudStack Row="true">
            <MudSpacer />
            <MudCard>
                <iframe src="@($"https://www.youtube.com/embed/{YouTube}")"
                        width="560"
                        height="315"
                        title="YouTube video player"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
                </iframe>
            </MudCard>
            <MudSpacer />
        </MudStack>
        <MudSpacer />
    </MudStack>
}
 
@if (!string.IsNullOrWhiteSpace(Vimeo))
{
    <MudStack Style="width:100%; height:100%; position:relative;">
        <MudSpacer />
        <MudStack Row="true">
            <MudSpacer />
            <MudCard>
                <iframe id="VimeoVideoTopIframe" src="@($"https://player.vimeo.com/video/{Vimeo}?h=4207be9a8a&title=0&byline=0&portrait=0")" frameborder="0" allow="autoplay; fullscreen; picture-in-picture"></iframe>
            </MudCard>
            <MudSpacer />
        </MudStack>
        <MudSpacer />
    </MudStack>
}

@code {

    [SupplyParameterFromQuery(Name = "y")]
    public string? YouTube { get; set; }
  
    [SupplyParameterFromQuery(Name = "v")]
    public string? Vimeo { get; set; }
}